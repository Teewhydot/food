# Paystack Configuration
# Get these from your Paystack Dashboard: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here

# For production, use live keys:
# PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key_here
# PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key_here

# Flutterwave v4 Configuration
# Get OAuth credentials from your Flutterwave Developer Portal: https://developer.flutterwave.com/

# v4 API OAuth 2.0 Configuration
FLUTTERWAVE_CLIENT_ID=your_oauth_client_id_here
FLUTTERWAVE_CLIENT_SECRET=your_oauth_client_secret_here
FLUTTERWAVE_SECRET_HASH=your_secret_hash_for_webhooks

# Environment Configuration
# Set to 'production' for live environment, 'sandbox' for testing (default)
FLUTTERWAVE_ENV=sandbox
NODE_ENV=development

# For production, use live credentials:
# FLUTTERWAVE_CLIENT_ID=your_live_oauth_client_id_here
# FLUTTERWAVE_CLIENT_SECRET=your_live_oauth_client_secret_here
# FLUTTERWAVE_SECRET_HASH=your_live_secret_hash_for_webhooks
# FLUTTERWAVE_ENV=production
# NODE_ENV=production

# Webhook Configuration
# This should match the URL you configure in Paystack Dashboard
# Example: https://your-project.cloudfunctions.net/paystackWebhook
WEBHOOK_SECRET=your_webhook_secret_from_paystack_dashboard

# Flutterwave Webhook Configuration
# Example: https://your-project.cloudfunctions.net/flutterwaveWebhook
FLUTTERWAVE_WEBHOOK_URL=your_flutterwave_webhook_url
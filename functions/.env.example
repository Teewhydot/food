# Paystack Configuration
# Get these from your Paystack Dashboard: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here

# For production, use live keys:
# PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key_here
# PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key_here

# Flutterwave v3 Configuration
# Get credentials from your Flutterwave Dashboard: https://dashboard.flutterwave.com/developers/api-keys

# v3 API Secret Key Authentication
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-xxxxxxxx
FLUTTERWAVE_SECRET_HASH=your_secret_hash_for_webhooks

# Environment Configuration
# Environment is determined by key prefix (TEST for sandbox, no prefix for production)
# TEST keys: FLWSECK_TEST-xxx, FLWPUBK_TEST-xxx (Sandbox)
# LIVE keys: FLWSECK-xxx, FLWPUBK-xxx (Production)
NODE_ENV=development

# For production, use live keys:
# FLUTTERWAVE_SECRET_KEY=FLWSECK-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X
# FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X
# FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK-xxxxxxxx
# FLUTTERWAVE_SECRET_HASH=your_live_secret_hash_for_webhooks
# NODE_ENV=production

# Webhook Configuration
# This should match the URL you configure in Paystack Dashboard
# Example: https://your-project.cloudfunctions.net/paystackWebhook
WEBHOOK_SECRET=your_webhook_secret_from_paystack_dashboard

# Flutterwave Webhook Configuration
# Example: https://your-project.cloudfunctions.net/flutterwaveWebhook
FLUTTERWAVE_WEBHOOK_URL=your_flutterwave_webhook_url

# Backend Keep-Alive Configuration
# URL to ping every 14 minutes to keep backend server active (prevents Render shutdown)
BACKEND_KEEPALIVE_URL=https://dfood-1.onrender.com/api/v1/restaurants